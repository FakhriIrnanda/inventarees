<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/purple">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Hallo!!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:backgroundTint="@color/logout"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardselamatdatang"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/cream"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="328dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:text="Selamat Datang!
                                                Pada Dashboard Aplikasi Pengelolaan Barang kami. Pantau dan atur inventaris Anda dengan mudah."
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/cardselamatdatang"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="30dp">

            <ImageButton
                android:id="@+id/tambah"
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:background="@drawable/tambah1"
                android:contentDescription="Tombol tambah" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:text="Tambah Barang"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="50dp">

            <ImageButton
                android:id="@+id/list"
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:background="@drawable/list1"
                android:contentDescription="Tombol tambah" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:text="List Kategori"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>